---
import BaseLayout from './BaseLayout.astro';
import Navigation from '@/components/Navigation.astro';
import Footer from '@/components/Footer.astro';

interface Props {
  title: string;
  description: string;
  frontmatter?: {
    title: string;
    description: string;
  };
}

const { title, description, frontmatter } = Astro.props;
const pageTitle = frontmatter?.title || title;
const pageDescription = frontmatter?.description || description;

const docsNav = [
  {
    section: 'Getting Started',
    items: [
      { title: 'Introduction', href: '/docs' },
      { title: 'Installation', href: '/docs/installation' },
      { title: 'Quick Start', href: '/docs/quick-start' },
    ]
  },
  {
    section: 'Configuration',
    items: [
      { title: 'Environment Variables', href: '/docs/configuration' },
      { title: 'Database Setup', href: '/docs/database' },
      { title: 'Data Sources', href: '/docs/data-sources' },
    ]
  },
  {
    section: 'Development',
    items: [
      { title: 'Local Development', href: '/docs/development' },
      { title: 'Docker Setup', href: '/docs/docker' },
      { title: 'CLI Tool', href: '/docs/cli' },
    ]
  },
  {
    section: 'API Reference',
    items: [
      { title: 'REST API', href: '/docs/api' },
      { title: 'Projects', href: '/docs/api/projects' },
      { title: 'Conversations', href: '/docs/api/conversations' },
      { title: 'ETL', href: '/docs/api/etl' },
    ]
  },
  {
    section: 'Deployment',
    items: [
      { title: 'Production Setup', href: '/docs/deployment' },
      { title: 'Docker Compose', href: '/docs/deployment/docker-compose' },
      { title: 'Kubernetes', href: '/docs/deployment/kubernetes' },
    ]
  },
];

const currentPath = Astro.url.pathname;
---

<BaseLayout title={`${pageTitle} - Rewind Docs`} description={pageDescription}>
  <Navigation />

  <div class="min-h-screen pt-16 bg-background">
    <div class="mx-auto max-w-[1680px]">
      <div class="flex">
        <!-- Sidebar Navigation -->
        <aside class="hidden lg:block w-[280px] flex-shrink-0 border-r border-border bg-muted/30">
          <div class="sticky top-16 h-[calc(100vh-4rem)] overflow-y-auto py-8">
            <nav class="px-6 space-y-2">
              {docsNav.map(({ section, items }) => (
                <div class="mb-8">
                  <h3 class="px-3 mb-3 text-[10px] font-bold uppercase tracking-widest text-muted-foreground/70">
                    {section}
                  </h3>
                  <ul class="space-y-1">
                    {items.map(item => {
                      const isActive = currentPath === item.href ||
                                      (item.href !== '/docs' && currentPath.startsWith(item.href));
                      return (
                        <li>
                          <a
                            href={item.href}
                            class={`group flex items-center text-[14px] py-2.5 px-3 rounded-md transition-all duration-200 ${
                              isActive
                                ? 'bg-primary/10 text-primary font-medium border-l-2 border-primary pl-2.5'
                                : 'text-muted-foreground hover:text-foreground hover:bg-muted/50 border-l-2 border-transparent pl-2.5'
                            }`}
                          >
                            <span class={`inline-block w-1.5 h-1.5 rounded-full mr-2.5 transition-colors ${
                              isActive ? 'bg-primary' : 'bg-muted-foreground/30 group-hover:bg-muted-foreground/50'
                            }`}></span>
                            {item.title}
                          </a>
                        </li>
                      );
                    })}
                  </ul>
                </div>
              ))}
            </nav>
          </div>
        </aside>

        <!-- Mobile Sidebar Toggle -->
        <button
          id="docs-mobile-menu-button"
          class="lg:hidden fixed bottom-6 right-6 z-50 h-12 w-12 rounded-full bg-primary text-primary-foreground shadow-lg flex items-center justify-center hover:bg-primary/90 transition-colors"
          aria-label="Toggle documentation menu"
        >
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>

        <!-- Mobile Sidebar -->
        <div
          id="docs-mobile-menu"
          class="lg:hidden fixed inset-0 z-40 bg-background/95 backdrop-blur-sm hidden"
        >
          <div class="h-full overflow-y-auto p-6 pt-20">
            <nav class="space-y-8">
              {docsNav.map(({ section, items }) => (
                <div>
                  <h3 class="text-xs font-bold uppercase tracking-wider text-muted-foreground mb-3">
                    {section}
                  </h3>
                  <ul class="space-y-2">
                    {items.map(item => {
                      const isActive = currentPath === item.href ||
                                      (item.href !== '/docs' && currentPath.startsWith(item.href));
                      return (
                        <li>
                          <a
                            href={item.href}
                            class={`block text-sm py-2 px-3 rounded-md transition-colors docs-mobile-link ${
                              isActive
                                ? 'bg-primary/10 text-primary font-medium'
                                : 'text-muted-foreground hover:text-foreground hover:bg-accent'
                            }`}
                          >
                            {item.title}
                          </a>
                        </li>
                      );
                    })}
                  </ul>
                </div>
              ))}
            </nav>
          </div>
        </div>

        <!-- Main Content -->
        <main class="flex-1 min-w-0 px-12 lg:px-16 py-10 bg-background">
          <div class="max-w-[850px]">
            <article class="prose prose-sm dark:prose-invert max-w-none">
              <slot />
            </article>
          </div>
        </main>

        <!-- Table of Contents (Right Sidebar) -->
        <aside class="hidden xl:block w-[260px] flex-shrink-0 border-l border-border bg-muted/20">
          <div class="sticky top-16 h-[calc(100vh-4rem)] overflow-y-auto py-10 px-6">
            <div class="mb-4 pb-3 border-b border-border/50">
              <h3 class="text-[11px] font-bold uppercase tracking-widest text-muted-foreground/70">
                On This Page
              </h3>
            </div>
            <nav id="toc" class="space-y-1">
              <!-- Generated by client-side JS -->
            </nav>
          </div>
        </aside>
      </div>
    </div>
  </div>

  <Footer />
</BaseLayout>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('docs-mobile-menu-button');
  const mobileMenu = document.getElementById('docs-mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Close mobile menu on link click
  const mobileLinks = document.querySelectorAll('.docs-mobile-link');
  mobileLinks?.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });

  // Generate table of contents from headings
  function generateTOC() {
    const toc = document.getElementById('toc');
    if (!toc) return;

    const article = document.querySelector('article');
    if (!article) return;

    const headings = article.querySelectorAll('h2, h3');
    if (headings.length === 0) {
      toc.innerHTML = '<p class="text-xs text-muted-foreground">No headings found</p>';
      return;
    }

    const tocItems = Array.from(headings).map(heading => {
      const id = heading.id || heading.textContent?.toLowerCase().replace(/\s+/g, '-').replace(/[^\w-]/g, '') || '';
      if (!heading.id) heading.id = id;

      const level = heading.tagName === 'H2' ? 0 : 1;
      return `
        <a
          href="#${id}"
          class="block text-[13px] leading-relaxed py-2 px-3 rounded-md text-muted-foreground hover:text-foreground hover:bg-muted/60 transition-all duration-200 toc-link border-l-2 border-transparent hover:border-muted-foreground/30 ${level === 1 ? 'pl-6 text-[12px]' : 'font-medium'}"
          data-target="${id}"
        >
          ${heading.textContent}
        </a>
      `;
    }).join('');

    toc.innerHTML = tocItems;

    // Highlight active section on scroll
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        const id = entry.target.id;
        const link = document.querySelector(`.toc-link[data-target="${id}"]`);
        if (entry.isIntersecting) {
          document.querySelectorAll('.toc-link').forEach(l => {
            l.classList.remove('text-primary', 'bg-primary/5', 'border-primary', 'font-semibold');
            l.classList.add('text-muted-foreground', 'border-transparent');
          });
          link?.classList.remove('text-muted-foreground', 'border-transparent');
          link?.classList.add('text-primary', 'bg-primary/5', 'border-primary', 'font-semibold');
        }
      });
    }, { rootMargin: '-100px 0px -80% 0px' });

    headings.forEach(heading => observer.observe(heading));
  }

  // Run on page load
  generateTOC();
</script>

<style>
  /* Prose styling for documentation - Professional spacing & typography */
  .prose {
    color: hsl(var(--foreground));
    font-size: 15px;
    line-height: 1.8;
  }

  .prose h1 {
    font-size: 2.25rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 1.25rem;
    margin-top: 0;
    letter-spacing: -0.03em;
    color: hsl(var(--foreground));
    padding-bottom: 1rem;
    border-bottom: 2px solid hsl(var(--border));
  }

  @media (min-width: 768px) {
    .prose h1 {
      font-size: 2.5rem;
      margin-bottom: 1.75rem;
    }
  }

  .prose h2 {
    font-size: 1.625rem;
    font-weight: 700;
    line-height: 1.3;
    margin-bottom: 1.25rem;
    margin-top: 3.5rem;
    padding-bottom: 0.625rem;
    padding-top: 0.5rem;
    letter-spacing: -0.02em;
    color: hsl(var(--foreground));
    border-bottom: 1px solid hsl(var(--border));
    scroll-margin-top: 5rem;
  }

  @media (min-width: 768px) {
    .prose h2 {
      font-size: 1.875rem;
      margin-top: 4rem;
    }
  }

  .prose h3 {
    font-size: 1.25rem;
    font-weight: 700;
    line-height: 1.4;
    margin-bottom: 1rem;
    margin-top: 2.75rem;
    letter-spacing: -0.015em;
    color: hsl(var(--foreground));
    scroll-margin-top: 5rem;
  }

  .prose h4 {
    font-size: 1.0625rem;
    font-weight: 700;
    line-height: 1.5;
    margin-bottom: 0.875rem;
    margin-top: 2.25rem;
    color: hsl(var(--foreground));
  }

  .prose p {
    font-size: 0.9375rem;
    line-height: 1.8;
    margin-bottom: 1.5rem;
    margin-top: 0;
    color: hsl(var(--foreground) / 0.85);
  }

  .prose a {
    color: hsl(var(--primary));
  }

  .prose a:hover {
    text-decoration: underline;
  }

  .prose code {
    padding: 0.2rem 0.5rem;
    border-radius: 0.375rem;
    font-size: 0.875em;
    font-family: 'Menlo', 'Monaco', 'Courier New', monospace;
    background-color: hsl(var(--muted) / 0.8);
    color: hsl(var(--foreground));
    font-weight: 500;
    border: 1px solid hsl(var(--border) / 0.4);
  }

  .prose pre {
    border-radius: 0.5rem;
    padding: 1.5rem 1.75rem;
    overflow-x: auto;
    margin-bottom: 2rem;
    margin-top: 1.5rem;
    font-size: 0.875rem;
    line-height: 1.7;
    background-color: hsl(var(--muted) / 0.6);
    border: 1px solid hsl(var(--border));
    position: relative;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08), 0 1px 2px rgba(0, 0, 0, 0.04);
  }

  .prose pre code {
    background: transparent;
    padding: 0;
    font-family: 'Menlo', 'Monaco', 'Courier New', monospace;
    font-weight: 400;
  }

  .prose ul, .prose ol {
    margin-bottom: 2rem;
    margin-top: 1.25rem;
    padding-left: 2rem;
  }

  .prose li {
    font-size: 0.9375rem;
    margin-top: 0.875rem;
    line-height: 1.8;
    color: hsl(var(--foreground) / 0.85);
  }

  .prose li:first-child {
    margin-top: 0;
  }

  .prose blockquote {
    border-left: 4px solid hsl(var(--primary));
    padding-left: 1rem;
    font-style: italic;
    margin: 1rem 0;
    color: hsl(var(--muted-foreground));
  }

  .prose table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 1.5rem;
    font-size: 0.75rem;
  }

  .prose th {
    padding: 0.5rem 1rem;
    text-align: left;
    font-weight: 600;
    background-color: hsl(var(--muted));
    border: 1px solid hsl(var(--border));
  }

  .prose td {
    padding: 0.5rem 1rem;
    border: 1px solid hsl(var(--border));
  }

  .prose img {
    border-radius: 0.5rem;
    margin: 1.5rem 0;
    border: 1px solid hsl(var(--border));
  }

  .prose hr {
    margin: 2rem 0;
    border-color: hsl(var(--border));
  }

  /* Alert/Callout boxes */
  .prose .callout {
    border-left: 4px solid;
    border-radius: 0.5rem;
    padding: 1.5rem 1.75rem;
    margin: 2rem 0;
    background-color: hsl(var(--muted) / 0.4);
    font-size: 0.9375rem;
    line-height: 1.75;
    border-right: 1px solid hsl(var(--border) / 0.4);
    border-top: 1px solid hsl(var(--border) / 0.4);
    border-bottom: 1px solid hsl(var(--border) / 0.4);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06), 0 1px 2px rgba(0, 0, 0, 0.03);
  }

  .prose .callout-title {
    font-weight: 700;
    margin-bottom: 0.75rem;
    font-size: 1rem;
    display: flex;
    align-items: center;
    gap: 0.625rem;
  }

  .prose .callout-icon {
    font-size: 1.125rem;
    line-height: 1;
  }

  .prose .callout p {
    margin-bottom: 0.75rem;
  }

  .prose .callout p:last-child {
    margin-bottom: 0;
  }

  .prose .callout-note {
    border-color: #3b82f6;
    background: linear-gradient(to right, rgba(59, 130, 246, 0.08), rgba(59, 130, 246, 0.03));
  }

  .prose .callout-note .callout-title {
    color: #3b82f6;
  }

  .prose .callout-tip {
    border-color: #8b5cf6;
    background: linear-gradient(to right, rgba(139, 92, 246, 0.08), rgba(139, 92, 246, 0.03));
  }

  .prose .callout-tip .callout-title {
    color: #8b5cf6;
  }

  .prose .callout-warning {
    border-color: #f59e0b;
    background: linear-gradient(to right, rgba(245, 158, 11, 0.08), rgba(245, 158, 11, 0.03));
  }

  .prose .callout-warning .callout-title {
    color: #f59e0b;
  }

  .prose .callout-danger {
    border-color: #ef4444;
    background: linear-gradient(to right, rgba(239, 68, 68, 0.08), rgba(239, 68, 68, 0.03));
  }

  .prose .callout-danger .callout-title {
    color: #ef4444;
  }

  .prose .callout-success {
    border-color: #10b981;
    background: linear-gradient(to right, rgba(16, 185, 129, 0.08), rgba(16, 185, 129, 0.03));
  }

  .prose .callout-success .callout-title {
    color: #10b981;
  }

  /* Code block enhancements */
  .prose .code-block-wrapper {
    position: relative;
    margin: 1.5rem 0;
  }

  .prose .code-block-label {
    position: absolute;
    top: 0;
    right: 0;
    padding: 0.375rem 0.75rem;
    background-color: hsl(var(--muted));
    border-bottom-left-radius: 0.375rem;
    font-size: 0.6875rem;
    font-weight: 500;
    color: hsl(var(--muted-foreground));
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Badge styling */
  .prose .badge {
    display: inline-block;
    padding: 0.125rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border: 1px solid;
  }

  .prose .badge-primary {
    background-color: rgba(139, 92, 246, 0.1);
    border-color: rgba(139, 92, 246, 0.3);
    color: #8b5cf6;
  }

  .prose .badge-secondary {
    background-color: hsl(var(--muted));
    border-color: hsl(var(--border));
    color: hsl(var(--muted-foreground));
  }

  /* Parameter list styling */
  .prose .param-list {
    margin: 1.5rem 0 2rem 0;
    border: 1px solid hsl(var(--border));
    border-radius: 0.5rem;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06), 0 1px 2px rgba(0, 0, 0, 0.03);
    background-color: hsl(var(--background));
  }

  .prose .param-item {
    padding: 1.25rem 1.5rem;
    border-bottom: 1px solid hsl(var(--border));
  }

  .prose .param-item:last-child {
    border-bottom: none;
  }

  .prose .param-item:hover {
    background-color: hsl(var(--muted) / 0.3);
  }

  .prose .param-name {
    font-family: 'Menlo', 'Monaco', 'Courier New', monospace;
    font-size: 0.9375rem;
    font-weight: 600;
    color: hsl(var(--foreground));
    margin-bottom: 0.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .prose .param-type {
    display: inline-block;
    padding: 0.2rem 0.5rem;
    background-color: hsl(var(--muted));
    border-radius: 0.3rem;
    font-size: 0.8125rem;
    font-family: 'Menlo', 'Monaco', 'Courier New', monospace;
    color: hsl(var(--muted-foreground));
    font-weight: 500;
  }

  .prose .param-desc {
    font-size: 0.9375rem;
    color: hsl(var(--muted-foreground));
    margin-top: 0;
    line-height: 1.7;
  }

  /* Enhanced list styling */
  .prose ul {
    list-style-type: disc;
  }

  .prose ul ul {
    list-style-type: circle;
  }

  .prose ol {
    list-style-type: decimal;
  }

  .prose li > p {
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
  }

  .prose li strong {
    color: hsl(var(--foreground));
  }
</style>
