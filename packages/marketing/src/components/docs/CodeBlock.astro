---
interface Props {
  language?: string;
  title?: string;
}

const { language, title } = Astro.props;
---

<div class="code-block-wrapper">
  {language && <div class="code-block-label">{language}</div>}
  {title && <div class="code-block-title">{title}</div>}
  <pre><code><slot /></code></pre>
</div>

<style>
  .code-block-title {
    position: absolute;
    top: 0;
    left: 0;
    padding: 0.375rem 0.75rem;
    background-color: hsl(var(--muted));
    border-bottom-right-radius: 0.375rem;
    font-size: 0.75rem;
    font-weight: 500;
    color: hsl(var(--foreground));
  }
</style>
