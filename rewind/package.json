{
  "name": "rewind-monorepo",
  "private": true,
  "packageManager": "pnpm@10.0.0",
  "scripts": {
    "dev": "pnpm --parallel -r dev",
    "dev:api": "pnpm --filter @rewind/api dev",
    "dev:web": "pnpm --filter @rewind/web dev",
    "dev:marketing": "pnpm --filter @rewind/marketing dev",
    "build": "pnpm -r build",
    "build:api": "pnpm --filter @rewind/api build",
    "build:web": "pnpm --filter @rewind/web build",
    "build:marketing": "pnpm --filter @rewind/marketing build",
    "preview:marketing": "pnpm --filter @rewind/marketing preview",
    "typecheck": "pnpm --filter @rewind/web typecheck",
    "typecheck:web": "pnpm --filter @rewind/web typecheck",
    "start:api": "pnpm --filter @rewind/api start",
    "start:web": "pnpm --filter @rewind/web start",
    "docker:dev": "docker compose -f docker-compose.dev.yml up",
    "docker:dev:build": "docker compose -f docker-compose.dev.yml up --build",
    "docker:dev:rebuild": "docker compose -f docker-compose.dev.yml down && docker compose -f docker-compose.dev.yml build --no-cache && docker compose -f docker-compose.dev.yml up",
    "docker:dev:rebuild:api": "docker compose -f docker-compose.dev.yml build --no-cache api && docker compose -f docker-compose.dev.yml restart api",
    "docker:dev:rebuild:web": "docker compose -f docker-compose.dev.yml build --no-cache web && docker compose -f docker-compose.dev.yml restart web",
    "docker:dev:down": "docker compose -f docker-compose.dev.yml down",
    "docker:dev:restart": "docker compose -f docker-compose.dev.yml restart",
    "docker:dev:clean": "docker compose -f docker-compose.dev.yml down -v",
    "docker:dev:logs": "docker compose -f docker-compose.dev.yml logs -f",
    "docker:dev:logs:api": "docker compose -f docker-compose.dev.yml logs -f api",
    "docker:dev:logs:web": "docker compose -f docker-compose.dev.yml logs -f web",
    "docker:prod": "docker compose up -d",
    "docker:prod:build": "docker compose up -d --build",
    "docker:prod:rebuild": "docker compose down && docker compose build --no-cache && docker compose up -d",
    "docker:prod:down": "docker compose down",
    "docker:prod:logs": "docker compose logs -f"
  },
  "devDependencies": {
    "typescript": "^5.9.2"
  }
}