# Rewind Docker Compose - Production Configuration
# Managed by Ansible - DO NOT EDIT MANUALLY
# Uses pre-built images from GitHub Container Registry

services:
  api:
    image: {{ rewind_image_registry }}/rewind-api:{{ rewind_image_tag }}
    container_name: rewind-api
    env_file:
      - .env
    environment:
      PORT: {{ rewind_api_port }}
    ports:
      - "127.0.0.1:{{ rewind_api_port }}:{{ rewind_api_port }}"
    networks:
      - rewind-network
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://localhost:{{ rewind_api_port }}/health"]
      interval: 30s
      timeout: 3s
      start_period: 10s
      retries: 3

  web:
    image: {{ rewind_image_registry }}/rewind-web:{{ rewind_image_tag }}
    container_name: rewind-web
    ports:
      - "127.0.0.1:{{ rewind_web_port }}:80"
    depends_on:
      api:
        condition: service_healthy
    networks:
      - rewind-network
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://localhost:80/"]
      interval: 30s
      timeout: 3s
      start_period: 5s
      retries: 3

networks:
  rewind-network:
    driver: bridge
